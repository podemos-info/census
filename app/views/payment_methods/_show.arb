# frozen_string_literal: true

context.instance_eval do
  panel title do
    changes_table_for(resource, changes: local_assigns[:changes]) do
      chrow :id
      chrow :flags do |resource|
        model_flags(resource)
      end
      chrow :person, change_field: :person_id
      chrow :name
      chrow :type_name
      chrow :created_at
      chrow :updated_at
    end
    show_table(context: context, title: t("census.payment_methods.information"), table: resource.additional_information) if resource.additional_information.any?
  end
end
