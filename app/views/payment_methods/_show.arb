# frozen_string_literal: true

context.instance_eval do
  panel title do
    attributes_table_for resource do
      row :id, class: classes[:id]
      row :flags, class: classes[:flags] do |resource|
        model_flags(resource)
      end
      row :person, class: classes[:person_id]
      row :name, class: classes[:name]
      row :type_name, class: classes[:type]
      row :created_at, class: classes[:created_at]
      row :updated_at, class: classes[:updated_at]
    end
    show_table(context: context, title: t("census.payment_methods.information"), table: resource.additional_information) if resource.additional_information.any?
  end
end
